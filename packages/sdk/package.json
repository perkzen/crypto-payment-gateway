{
  "name": "@workspace/sdk",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "description": "Crypto Payment Gateway SDK with React hooks",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
