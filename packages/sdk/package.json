  },
  "dependencies": {
    "@workspace/shared": "workspace:*",
    "axios": "^1.7.9",
    "react": "^19.1.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist"
  ]
