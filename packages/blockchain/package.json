{
  "name": "@workspace/blockchain",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Blockchain contracts and wagmi hooks for the crypto payment gateway",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./contracts": {
      "types": "./dist/contracts/generated.d.ts",
      "require": "./dist/contracts/generated.js",
      "default": "./dist/contracts/generated.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "generate:contracts": "wagmi generate"
  },
  "dependencies": {
    "viem": "^2.41.2"
  },
  "peerDependencies": {
    "wagmi": "^3.1.0"
  },
  "devDependencies": {
    "@turbo/gen": "^2.5.5",
    "@types/node": "^20.19.9",
    "@wagmi/cli": "^2.8.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "wagmi": "^3.1.0"
  }
}
